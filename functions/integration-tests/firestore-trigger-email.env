SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=test@example.com
SMTP_PASSWORD=password
FROM_EMAIL=test@example.com
TO_EMAIL=recipient@example.com
COLLECTION_PATH=notifications
TEMPLATE_ENGINE=handlebars
EMAIL_TEMPLATE=Новый документ создан в коллекции ${collectionPath}\nID документа: ${documentId}\nСодержимое: ${documentData}
USER_COLLECTION=users
USER_ID_FIELD=userId
ENABLE_HTML=true
MAX_RETRIES=3
RETRY_DELAY=5
ENABLE_LOGGING=true
LOG_COLLECTION=email_logs
SANITIZE_SENSITIVE_DATA=true
MAX_DOCUMENT_SIZE=1024
MAX_EMAIL_SIZE=10240
APP_NAME=Test App
ENABLE_API=true
API_AUTH_REQUIRED=true
ENABLE_READY_TEMPLATES=true
ENABLE_ERROR_RECOVERY=true
ERROR_RECOVERY_MAX_RETRIES=3
ERROR_RECOVERY_DELAY=5
DEFAULT_LANGUAGE=ru 